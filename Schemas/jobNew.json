{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "jobNewSchema",
    "required": [
        "title",
        "salary",
        "equity",
        "company_handle"
    ],
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "salary": {
            "type": "integer",
            "minimum": 0
        },
        "equity": {
            "type": ["number", "integer"],
            "minimum": 0,
            "maximum": 1
        },
        "company_handle": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        }
    }
}